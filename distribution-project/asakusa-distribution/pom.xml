  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>default-cli</id>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/resources/assemblies/dev.xml</descriptor>
                <descriptor>src/main/resources/assemblies/prod-directio.xml</descriptor>
                <descriptor>src/main/resources/assemblies/prod-thundergate.xml</descriptor>
                <descriptor>src/main/resources/assemblies/prod-windgate.xml</descriptor>
                <descriptor>src/main/resources/assemblies/ext-windgate-retryable-plugin.xml</descriptor>
                <descriptor>src/main/resources/assemblies/ext-directio-hive-plugin.xml</descriptor>
                <descriptor>src/main/resources/assemblies/ext-yaess-jobqueue-plugin.xml</descriptor>
                <descriptor>src/main/resources/assemblies/ext-cleaner.xml</descriptor>
                <descriptor>src/main/resources/assemblies/ext-experimental-shell-script.xml</descriptor>
              </descriptors>
              <finalName>asakusafw-${project.version}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- FIXME avoid maven assembly plugin's bug -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-components-for-assembly-plugin-bug</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.outputDirectory}/components</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/resources/assemblies/components</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

